@using System.Web

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProRota</title>

    @* signalR *@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProRota.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    


</head>
<body style="background-color: #fffdee;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/LogoNavBar.png" alt="ProRota Logo" style="height: 50px; ">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* Add Items to left side of navbar here *@
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2024 - ProRota - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/createRotaConfigurationScripts.js" asp-append-version="true"></script>
    <script src="~/js/genericPopUpScripts.js" asp-append-version="true"></script>
    <script src="~/js/siteConfigurationScripts.js" asp-append-version="true"></script>
    <script src="~/js/tableScripts.js" asp-append-version="true"></script>
    <script src="~/js/userDashboardScripts.js" asp-append-version="true"></script>
    <script src="~/js/signalRScripts.js" asp-append-version="true"></script>
    <script src="~/js/companyScripts.js" asp-append-version="true"></script>
    <script src="~/js/siteScripts.js" asp-append-version="true"></script>

    @* Listener throughout all pages that implement _layout - easy way to pass messages to the view with popups *@
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Error Message Handling
            var errorMessage = '@HttpUtility.JavaScriptStringEncode(ViewBag.Error ?? "")';
            if (errorMessage && errorMessage.trim() !== '') {
                console.log('❌ PopUp Error:', errorMessage);
                popUpMessageError(errorMessage);
            }

            // Success Message Handling
            var successMessage = '@HttpUtility.JavaScriptStringEncode(ViewBag.Success ?? "")';
            if (successMessage && successMessage.trim() !== '') {
                console.log('✅ PopUp Success:', successMessage);
                popUpMessageSuccess(successMessage);
            }

            // General Alert Message Handling
            var alertMessage = '@HttpUtility.JavaScriptStringEncode(ViewBag.Alert ?? "")';
            if (alertMessage && alertMessage.trim() !== '') {
                console.log('⚠️ PopUp Alert:', alertMessage);
                popUpMessageAlert(alertMessage);
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
