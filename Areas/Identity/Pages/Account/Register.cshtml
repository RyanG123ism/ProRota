@page
@model RegisterModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Register";
    if (!SignInManager.IsSignedIn(User))
    {
        Layout = "_LayoutNavBarRemoved";
    }
}

<!-- Full Page Centering -->
<div class="d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg p-4 text-center" style="max-width: 400px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-center">@ViewData["Title"]</h2>
            <hr />
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                <!-- First Name -->
                <div class="form-floating mb-3 text-center">
                    <input asp-for="Input.FirstName" class="form-control text-center" autocomplete="given-name"
                           aria-required="true" placeholder="Enter your first name" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="form-floating mb-3 text-center">
                    <input asp-for="Input.LastName" class="form-control text-center" autocomplete="family-name"
                           aria-required="true" placeholder="Enter your last name" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="form-floating mb-3 text-center">
                    <input asp-for="Input.Email" class="form-control text-center" autocomplete="username"
                           aria-required="true" placeholder="Enter your email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-3 text-center">
                    <input asp-for="Input.Password" class="form-control text-center" autocomplete="new-password"
                           aria-required="true" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-floating mb-3 text-center">
                    <input asp-for="Input.ConfirmPassword" class="form-control text-center" autocomplete="new-password"
                           aria-required="true" placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>


                <!-- Submit Button -->
                <div class="d-grid">
                    <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
