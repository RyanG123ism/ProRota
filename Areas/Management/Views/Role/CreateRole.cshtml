@using ProRota.Areas.Management.ViewModels
@model CreateRoleViewModel

@{
    ViewData["Title"] = "Create Role";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2>Create Role</h2>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRole" method="post">
                        <!-- Role Name Input -->
                        <div class="mb-3">
                            <label asp-for="RoleName" class="form-label"></label>
                            <input asp-for="RoleName" class="form-control" type="text" />
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <!-- Role Category Dropdown -->
                        <div class="mb-3">
                            <label asp-for="SelectedRoleCategoryId" class="form-label">Select Role Category</label>
                            <select asp-for="SelectedRoleCategoryId" asp-items="Model.RoleCategories" class="form-control">
                                <option value="">-- Select a Role Category --</option>
                            </select>
                            <span asp-validation-for="SelectedRoleCategoryId" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create Role</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
