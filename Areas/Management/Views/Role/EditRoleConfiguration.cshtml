@using ProRota.Areas.Management.ViewModels
@model EditRoleConfigurationViewModel

@{
    ViewData["Title"] = "Edit Role Configuration";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center">
                    <h2>Edit Role Configuration</h2>
                </div>
                <div class="card-body">
                    <form asp-action="EditRoleConfiguration" method="post">
                        <!-- Hidden Field for ID (Not Editable) -->
                        <input type="hidden" asp-for="Id" />

                        <!-- Min Employees Input -->
                        <div class="mb-3">
                            <label asp-for="MinEmployees" class="form-label"></label>
                            <input asp-for="MinEmployees" class="form-control" type="number" />
                            <span asp-validation-for="MinEmployees" class="text-danger"></span>
                        </div>

                        <!-- Max Employees Input -->
                        <div class="mb-3">
                            <label asp-for="MaxEmployees" class="form-label"></label>
                            <input asp-for="MaxEmployees" class="form-control" type="number" />
                            <span asp-validation-for="MaxEmployees" class="text-danger"></span>
                        </div>

                        <!-- Role Category Input -->
                        <div class="mb-3">
                            <label asp-for="SelectedRoleCategory" class="form-label"></label>
                            <input asp-for="SelectedRoleCategory" class="form-control" type="text" />
                            <span asp-validation-for="SelectedRoleCategory" class="text-danger"></span>
                        </div>

                        <!-- Submit & Cancel Buttons -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>

                        <!-- Display ViewBag Error Message -->
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger text-center mt-3">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
