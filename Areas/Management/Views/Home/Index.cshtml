@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm p-3 mb-5" style="background-color: #f8f9fa; border: none;">
                <div class="card-header text-center bg-primary text-white">
                    <h1 class="display-4">Management Dashboard</h1>
                    <h3 >for Six by Nico @ViewBag.SiteName</h3>
                </div>
                <div class="card-body text-center">
                    <!-- Center all text within the card body -->
                    <!-- Active Links Section -->
                    <h4 class="mb-3">Manage your Operations</h4>
                    <ul class="list-group mb-4">
                        <a asp-area="Management" asp-controller="ApplicationUser" asp-action="Index" class="list-group-item list-group-item-action text-center">
                            <i class="fas fa-users mr-2"></i> Manage Users
                        </a>
                        <a asp-area="Management" asp-controller="Rota" asp-action="Index" class="list-group-item list-group-item-action text-center">
                            <i class="fas fa-users mr-2"></i> Manage Weekly Rotas
                        </a>
                        <a asp-area="Management" asp-controller="TimeOffRequest" asp-action="Index" class="list-group-item list-group-item-action text-center">
                            <i class="fas fa-users mr-2"></i> Manage Holiday Requests
                        </a>
                    </ul>

                    <h4 class="mb-3">Configure your Site</h4>
                    <ul class="list-group mb-4">
                        <a asp-area="Management" asp-controller="ApplicationUser" asp-action="Index" class="list-group-item list-group-item-action text-center">
                            <i class="fas fa-users mr-2"></i> Site Configuration
                        </a>
                    </ul>

                    <h4 class="mb-3">Site Analytics</h4>
                    <ul class="list-group mb-4">
                        <a asp-area="Management" asp-controller="ApplicationUser" asp-action="Index" class="list-group-item list-group-item-action text-center">
                            <i class="fas fa-users mr-2"></i> See How Your Site is Performing
                        </a>
                    </ul>

                    <!-- Unused Links Section -->
                    <h4 class="mb-3 text-muted">Unused Links</h4>
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-secondary text-center">
                            <i class="fas fa-cogs mr-2"></i> Feature 1 (Unused)
                        </li>
                        <li class="list-group-item list-group-item-secondary text-center">
                            <i class="fas fa-chart-bar mr-2"></i> Feature 2 (Unused)
                        </li>
                        <li class="list-group-item list-group-item-secondary text-center">
                            <i class="fas fa-tasks mr-2"></i> Feature 3 (Unused)
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>



