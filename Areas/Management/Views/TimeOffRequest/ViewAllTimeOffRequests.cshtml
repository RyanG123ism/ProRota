@model IEnumerable<ProRota.Models.TimeOffRequest>
@using Microsoft.AspNetCore.Identity
@using ProRota.Models
@using System.Security.Claims;

@inject UserManager<ApplicationUser> UserManager


@{
    ViewData["Title"] = "ViewAllUsers";
}
<div class="card shadow-sm p-3 mb-5" style="background-color: #f8f9fa; border: none;">
    <div class="card-header text-center">
        <h1 class="display-4">Management Dashboard</h1>
        <h3>Manage Time-Off Requests</h3>
    </div>
    <div class="card-body">

        <!-- Count of the requests -->
        @if(ViewBag.Status != null)
        {
            <h3 class="font-weight-bold text-center text-black" style="padding-top: 10px;">@Model.Count() @ViewBag.Status Time-Off Requests</h3>
        }
        else
        {
            <h3 class="font-weight-bold text-center text-black" style="padding-top: 10px;">@Model.Count() Time-Off Requests</h3>
        }
        

        <div style="display: flex; justify-content: flex-start; gap: 10px;">
            <form method="get" action="@Url.Action("SortByRequestStatus", "TimeOffRequest")" style="display: inline;">
                <input type="hidden" name="status" value="Approved">
                <button type="submit" style="background-color: lightgreen; color: black; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">
                    Approved
                </button>
            </form>

            <form method="get" action="@Url.Action("SortByRequestStatus", "TimeOffRequest")" style="display: inline;">
                <input type="hidden" name="status" value="Denied">
                <button type="submit" style="background-color: lightcoral; color: black; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">
                    Denied
                </button>
            </form>

            <form method="get" action="@Url.Action("SortByRequestStatus", "TimeOffRequest")" style="display: inline;">
                <input type="hidden" name="status" value="Pending">
                <button type="submit" style="background-color: lightgrey; color: black; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">
                    Pending
                </button>
            </form>
        </div>

        <!-- Time-Off Requests Table -->
        <table class="table table-striped table-bordered mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Site ID</th>
                    <th>First Name</th>
                    <th>Date</th>
                    <th>Notes</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    <tr>
                        <td>@request.ApplicationUser.SiteId</td>
                        <td>@request.ApplicationUser.FirstName @request.ApplicationUser.LastName</td>
                        <td>@request.Date.ToString("dd/MM/yyyy")</td>
                        <td>@request.Notes</td>
                        <td>@request.IsApproved</td>
                    </tr>
                }
            </tbody>
        </table>
        

        
    </div>
</div>




