@model Dictionary<string, List<Shift>>
@using ProRota.Models


<div class="card shadow-sm p-3 mb-5">
    <div class="card-header text-center">
        <h1 class="display-4">Rota Management</h1>
        <h3>Weekly Rotas</h3>
    </div>
    <div class="card-body text-center">
        <div class="container">
            <h2 class="text-center text-black font-weight-bold" style="padding-top: 10px;">Weekly Rotas</h2>

            @if (Model == null || !Model.Any())
            {
                <p class="text-center">@ViewBag.ErrorMessage</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Week Ending</th>
                                <th>Total Shifts</th>
                                <th>Is Published? (IMPLEMENT THIS)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model)
                            {
                                var weekEnding = entry.Key;
                                var shifts = entry.Value;
                                //var isPublished = shifts.Any(shift => shift.IsPublished); // Assuming `IsPublished` is a property in Shift

                                <tr class="text-black">
                                    <!-- Week Ending Key -->
                                    <td>
                                        Week Ending: @weekEnding
                                    </td>

                                    <!-- Total Shifts -->
                                    <td>
                                        @shifts.Count
                                    </td>

                                    <!-- Is Published? -->
                                    <td>
                                        @* @if (isPublished)
                                {
                                <span class="text-success font-weight-bold">Yes</span>
                                }
                                else
                                {
                                <span class="text-danger font-weight-bold">No</span>
                                } *@

                                        No
                                    </td>

                                    <!-- Actions -->
                                    <td>
                                        @Html.ActionLink("View", "ViewWeeklyRota", new { weekEnding = weekEnding }) |
                                        @Html.ActionLink("Edit", "EditWeeklyRota", new { weekEnding = weekEnding }) |
                                        @Html.ActionLink("Publish", "PublishWeeklyRota", new { weekEnding = weekEnding })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>








