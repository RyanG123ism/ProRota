@model ProRota.Areas.Admin.Models.ViewModels.CreateCompanyViewModel

@{
    ViewData["Title"] = "Create Company";
}

<div class="container mt-5" style="color:white">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white p-4 shadow-lg">
                <h2 class="text-center">Create Your Company</h2>
                <form asp-action="CreateCompany" method="post">

                    <!-- Hidden User ID -->
                    <input type="hidden" asp-for="ApplicationUserId" />

                    <!-- Company Name -->
                    <div class="form-group mt-3">
                        <label asp-for="CompanyName"></label>
                        <input asp-for="CompanyName" class="form-control" placeholder="Enter company name" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">Create Company</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
